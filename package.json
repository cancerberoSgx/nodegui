{
  "name": "@nodegui/nodegui",
  "version": "0.2.1",
  "description": "A cross platform library to build native desktop apps.",
  "main": "dist/src/index.js",
  "typings": "dist/src/index.d.ts",
  "files": [
    "dist/src",
    "config",
    "CMakeLists.txt",
    "src/cpp",
    "extras/legal",
    "plugin"
  ],
  "author": "Atul R <atulanand94@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "dev": "npm run build && qode dist/src/demo.js",
    "postinstall": "npm run build:addon",
    "clean": "rm -rf build dist tmp*",
    "build": "tsc && npm run build:addon ",
    "test": "rm -rf dist && npx tsc & npm run test-copy && npm run test-ts && npm run test-js",
    "test-copy": "mkdir -p dist/build/Release && cp -r build/Release/* dist/build/Release/",
    "test-ts": "qode node_modules/ts-node/dist/bin node_modules/jasmine/bin/jasmine",
    "test-js": "qode node_modules/jasmine/bin/jasmine --config=spec/support/jasmine-js.json",
    "all": "npm run clean && npm run build && npm run test-all",
    "build:addon": "cross-env CMAKE_BUILD_PARALLEL_LEVEL=8 cmake-js compile",
    "docs": "serve docs"
  },
  "dependencies": {
    "@nodegui/qode": "^1.0.5",
    "cmake-js": "^5.3.2",
    "cross-env": "^6.0.0",
    "cuid": "^2.1.6",
    "node-addon-api": "^1.6.3",
    "postcss-nodegui-autoprefixer": "0.0.7"
  },
  "devDependencies": {
    "@types/bindings": "^1.3.0",
    "@types/jasmine": "^3.4.1",
    "@types/node": "^12.0.2",
    "jasmine": "^3.5.0",
    "prettier": "^1.17.1",
    "serve": "^11.1.0",
    "ts-node": "^8.4.1",
    "typescript": "^3.4.5"
  }
}
